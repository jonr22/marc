<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Race classes</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @race_classes.each do |race_class| %>
          <tr>
            <td><%= race_class.name %></td>
            <td><%= link_to 'Show', race_class %></td>
            <td><%= link_to 'Edit', edit_race_class_path(race_class) %></td>
            <td><%= link_to 'Destroy', race_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Race class', new_race_class_path, class: "btn btn-primary" %>
  </div>
</div>
