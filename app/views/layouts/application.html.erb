<!DOCTYPE html>
<html>

<%= render 'layouts/head' %>

<body>
  <%= render 'layouts/header' %>
  <div class="content" ng-app="Marc">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert alert-#{key}") %>
    <% end %>
    <%= yield %>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
