<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Races</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Season</th>
          <th>Date</th>
          <th>Venue</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @races.each do |race| %>
          <tr>
            <td><%= race.season.name %></td>
            <td><%= race.date %></td>
            <td><%= race.venue %></td>
            <td><%= link_to 'Show', race %></td>
            <td><%= link_to 'Edit', edit_race_path(race) %></td>
            <td><%= link_to 'Destroy', race, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Race', new_race_path, class: "btn btn-primary" %>
  </div>
</div>
