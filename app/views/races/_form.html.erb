<%= form_for(@race) do |f| %>
  <% if @race.errors.any? %>
    <div class="row">
      <div id="error_explanation">
        <div class="alert alert-danger">
          The form contains
          <%= pluralize(@race.errors.count, "error") %>
          <ul>
          <% @race.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group">
      <%= f.label :season_id %>
      <%= f.collection_select :season_id, Season.all, :id, :name %>
    </div>
    <div class="form-group">
      <%= f.label :date %>
      <%= f.date_select :date, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :venue %>
      <%= f.text_field :venue, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_area :notes, class: 'form-control' %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
